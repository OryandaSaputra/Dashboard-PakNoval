// prisma/schema.prisma
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum KategoriTanaman {
  TM
  TBM
  BIBITAN
}

model RencanaPemupukan {
  id              Int              @id @default(autoincrement())
  kategori        KategoriTanaman
  kebun           String
  kodeKebun       String
  tanggal         DateTime         @db.Date
  afd             String
  tt              String
  blok            String
  luasHa          Float
  inv             Int
  jenisPupuk      String
  aplikasiKe      Int
  dosisKgPerPokok Float
  kgPupuk         Float

  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
}

model RealisasiPemupukan {
  id              Int              @id @default(autoincrement())
  kategori        KategoriTanaman
  kebun           String
  kodeKebun       String
  tanggal         DateTime         @db.Date
  afd             String
  tt              String
  blok            String
  luasHa          Float
  inv             Int
  jenisPupuk      String
  aplikasiKe      Int
  dosisKgPerPokok Float
  kgPupuk         Float

  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
}
